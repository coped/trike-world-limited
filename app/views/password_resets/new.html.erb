<% provide(:title, "Forgot Password") %>
<% provide(:page, "forgot_password") %>

<section class="section">
    <div class="container">
        <h1 class="subtitle is-size-1 has-text-centered">Reset Password</h1>
    </div>
    <div class="container columns center">
        <div class="column is-8">
            <%= form_with(url: password_resets_path, local: true) do |f| %>
                <div class="field">
                    <%= f.label :email, class: "label" %>
                    <div class="control">
                        <%= f.email_field :email, class: "input" %>
                    </div>
                </div>

                <div class="field">
                    <div class="control">
                        <%= f.submit :submit, class: "button is-link" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>
