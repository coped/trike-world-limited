<% provide(:title, "New Password") %>
<% provide(:page, "new_password") %>

<%= render 'shared/errors' %>

<div class="container has-text-centered">
    <h1 class="subtitle is-size-1">New Password</h1>
</div>
<div class="container columns center">
    <div class="column is-8">
        <%= form_with(model: @user, url: password_reset_url, local: true) do |f| %>
            <%= hidden_field_tag :email, @user.email %>

            <div class="field">
                <%= f.label :password, class: "label" %>
                <div class="control">
                    <%= f.password_field :password, class: "input" %>
                </div>
            </div>

            <div class="field">
                <%= f.label :password_confirmation, class: "label" %>
                <div class="control">
                    <%= f.password_field :password_confirmation, class: "input" %>
                </div>
            </div>

            <div class="field">
                <%= f.submit :submit, class: "button is-link" %>
            </div>
        <% end %>
    </div>
