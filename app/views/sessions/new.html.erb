<% provide(:title, "Log in") %>
<% provide(:page, "login") %>

<section class="section">
    <div class="container">
        <h1 class="subtitle is-size-1 has-text-centered">Log in</h1>
    </div>
</section>

<section class="section">
    <div class="container">
        <%= form_with(scope: :login, url: login_path) do |f| %>
            <%= f.label :email %>
            <%= f.email_field :email %>

            <%= f.label :password %>
            <%= f.password_field :password %>

            <%= f.submit :submit %>
        <% end %>
    </div>
</section>