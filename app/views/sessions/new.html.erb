<% provide(:title, "Log in") %>
<% provide(:page, "login") %>

<section class="section">
    <div class=container>
        <h1 class="subtitle is-size-1 has-text-centered">Log in</h1>
    </div>
    <div class="container columns center">
        <div class="column is-8">
            <% # local: true allows render to work%>
            <%= form_with(scope: :login, url: login_path, local: true) do |f| %>
                <div class="field">
                    <%= f.label :email, class: "label" %>
                    <div class="control">
                        <%= f.email_field :email, class: "input" %>
                    </div>
                </div>

                <div class="field">
                    <%= f.label :password, class: "label" %>
                    <div class="control">
                        <%= f.password_field :password, class: "input" %>
                    </div>
                </div>

                <div class="field">
                    <label class="checkbox">
                        <%= f.check_box :remember %>
                        Remember me
                    </label>
                </div>

                <div class="field">
                    <div class="control">
                        <%= f.submit :submit, class: "button is-link" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>