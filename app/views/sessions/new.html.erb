<% provide(:title, "Log in") %>
<% provide(:page, "login") %>


<section class="section">
    <nav class="breadcrumb" aria-label="breadcrumbs">
        <ul>
            <li><%= link_to("Blog Name", posts_path) %></li>
            <li class="is-active"><a href="#" aria-current="page">Log In</a></li>
        </ul>
    </nav>
    <div class="container columns center">
        <div class="column is-8">
        <h1 class="subtitle is-size-1 has-text-centered">Log In</h1>
            <% #  local: true allows render to work %>
            <%= form_with(scope: :login, url: login_path, local: true) do |f| %>
                <div class="field">
                    <%= f.label :email, class: "label" %>
                    <div class="control">
                        <%= f.email_field :email, class: "input" %>
                    </div>
                </div>

                <div class="field">
                    <%= f.label :password, class: "label" %>
                    <div class="control">
                        <%= f.password_field :password, class: "input" %>
                    </div>
                </div>

                <div class="field">
                    <p class="is-size-6"><%= link_to("Forgot password?", new_password_reset_path) %></p>
                </div>

                <div class="field">
                    <label class="checkbox">
                        <%= f.check_box :remember %>
                        Remember me
                    </label>
                </div>

                <div class="field">
                    <div class="control">
                        <%= f.submit :submit, class: "button is-link" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>