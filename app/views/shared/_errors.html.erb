<div id="error-messages" class="container center">
    <% if @user.errors.any? %>
        <div class="notification is-danger">
            <h4 class="is-size-4 center"><strong><%= pluralize(@user.errors.count, "error") %> occurred:</strong></h4>
            <ul>
                <% @user.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
</div>
