<% provide(:title, "Blog Name") %>
<% provide(:page, "blog") %>

<div class="container">
    <div class="has-text-right">
        <% if logged_in? %>
            <%= render 'posts_navbar' %>
        <% else %>
            <%= link_to("Log in", login_path, class: "button is-link") %>
        <% end %> 
    </div>
</div>

<section class="section">
    <h1 class="is-size-1 title has-text-centered">Not For Sissies!</h1>
    <div class="container columns center">
        <div class="column is-8">
            <% @posts.each do |post| %>
                <section class="section">
                    <div class="card">
                        <div class="card-content">
                            <div class="content has-text-centered">
                                <h2 class="title has-text-weight-light is-size-2"><%= post.title %></h2>
                            </div>
                        </div>
                        <div class="card-image">
                            <figure class="image is-4by3">
                                <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                            </figure>
                        </div>
                        <div class="card-content">
                            <div class="media">
                                <div class="media-left">
                                    <figure class="image is-48x48">
                                    <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                                    </figure>
                                </div>
                                <div class="media-content">
                                    <p class="title is-4"><%= post.user.name %></p>
                                    <p class="subtitle is-6"></p>
                                </div>
                            </div>

                            <div class="content">
                                <p><%= post.body %></p>
                                <br>
                                <time datetime="2016-1-1">Posted: <%= post.created_at.in_time_zone("MST") %></time>
                                <% if post.updated_at != post.created_at %>
                                    <time datetime="2016-1-1">(Edited: <%= post.created_at.in_time_zone("MST") %>)</time>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </section>
            <% end %>
        </div>
    </div>
</section>