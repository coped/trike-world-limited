 <li id="post-<%= post.id %>">
    <div class="container column is-8">
        <div class="card">
            <div class="card-content">
                <div class="content has-text-centered">
                    <h2 class="title has-text-weight-light is-size-2"><%= post.title %></h2>
                </div>
            </div>
            <div class="card-image">
                <figure class="image is-4by3">
                    <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                </figure>
            </div>
            <div class="card-content">
                <div class="media">
                    <div class="media-left">
                        <figure class="image is-48x48">
                            <%= link_to(image_tag("https://trikeworldlimited.s3-us-west-1.amazonaws.com/misc/96x96.png",
                                        alt: "Placeholder image"),
                                user_path(post.user)) %>
                        </figure>
                    </div>
                    <div class="media-content">
                        <p class="title is-4"><%= link_to(post.user.name, user_path(post.user)) %></p>
                    </div>
                </div>

                <div class="content">
                    <p><%= post.body %></p>
                    <br>
                    <div class="columns">
                        <p class="column">
                            Posted: <%= post.created_at.in_time_zone("MST").strftime("%m-%d-%Y %l:%M %p") %> 
                            (<%= time_ago_in_words(post.created_at.in_time_zone("MST")) %> ago)
                            <% if post.updated_at != post.created_at %>
                                
                            <% end %>
                        </p>
                        <% if current_user == post.user %>
                            <p class="column has-text-right">
                                <%= link_to("Edit", edit_post_path(post)) %> | <%= link_to("Delete", post_path(post), method: :delete,
                                                                                                                      data: { confirm: "Are you sure you want to delete this post?" } ) %>
                            </p>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</li>