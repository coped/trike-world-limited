<div class="container">
    <div class="columns">
        <div class="column has-text-left">
            <h2 class="is-size-4">
                Welcome, <%= current_user.road_name ? current_user.road_name : current_user.first_name %>
            </h2>
        </div>
        <div class="column has-text-right">
            <%= link_to("Create new post", new_post_path, class: "button is-primary") %>
            <div class="dropdown is-hoverable">
                <div class="dropdown-trigger">
                    <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
                        <span>Account</span>
                        <span class="icon is-small">
                            <i class="fas fa-angle-down" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
                <div class="dropdown-menu" id="dropdown-menu" role="menu">
                    <div class="dropdown-content">
                        <%= link_to("Account settings", edit_user_path(current_user), class: "dropdown-item") %>
                        <hr class="dropdown-divider">
                        <%= link_to("Log out", logout_path, method: :delete, class: "dropdown-item") %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr>