<%= render 'posts/posts_navbar' %>
<nav class="breadcrumb" aria-label="breadcrumbs">
    <ul>
        <li><%= link_to("Not For Sissies!", posts_path) %></li>
        <li class="is-active"><a href="#" aria-current="page">Account Settings</a></li>
    </ul>
</nav>
<h1 class="subtitle is-size-1 has-text-centered">Account Settings</h1>
<div class="container columms <%= @user.avatar.attached? ? nil : "center"%> level">
    <% if @user.avatar.attached? %>
        <div class="column is-4 has-text-centered level-left">
            <%= image_tag(@user.avatar.variant(resize_to_limit: [500, 500])) %>
        </div>
    <% end %>
    <div class="column is-8">
        <%= form_with(model: @user, local: true) do |f| %>
            <div class="field">
                <%= f.label :name, class: "label" %>
                <div class="control">
                    <%= f.text_field :name, class: "input" %>
                </div>
            </div>

            <div class="field">
                <%= f.label :road_name, class: "label" %>
                <div class="control">
                    <%= f.text_field :road_name, class: "input" %>
                </div>
            </div>

            <div class="field">
                <%= f.label :password, class: "label" %>
                <div class="control">
                    <%= f.password_field :password, class: "input" %>
                </div>
            </div>

            <div class="field">
                <%= f.label :password_confirmation, class: "label" %>
                <div class="control">
                    <%= f.password_field :password_confirmation, class:"input" %>
                </div>
            </div>

            <div class="field">
                <%= f.label :profile_picture, class: "label" %>
                <div class="control">
                    <%= f.file_field :avatar %>
                </div>
            </div>

            <%= f.submit :submit, class: "button is-link" %>
        <% end %>
    </div>
</div>
